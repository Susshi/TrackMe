    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/maplegend_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/maplegend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTTT"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF" android:maxWidth="150dp" android:ellipsize="end" android:lines="1" android:scrollHorizontally="true"/>

</LinearLayout>