<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.androidlab.trackme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".activities.TrackMeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MapActivity"></activity>
        <activity android:label="@string/app_name" android:name=".activities.CreditsActivity"></activity>
        <activity android:label="@string/app_name" android:name=".activities.SettingsActivity"></activity>
        <activity android:name=".activities.SettingsGeneralTabActivity" android:label="@string/app_name"></activity>
        <activity android:name=".activities.SettingsPrivacyTabActivity" android:label="@string/app_name"></activity>
        <activity android:name=".activities.RouteListActivity" android:label="@string/app_name"></activity>
    </application>

</manifest>